<h1>Listing books</h1>

<p>
  Number of books:
  <%= @books.count %>
</p>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= edit_and_destroy_buttons(book) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to('New book', new_book_path, class:"btn btn-default") unless current_user.nil? %>
