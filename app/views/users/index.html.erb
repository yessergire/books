<h1>Listing users</h1>

<p>
  Number of users:
  <%= @users.count %>
</p>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>